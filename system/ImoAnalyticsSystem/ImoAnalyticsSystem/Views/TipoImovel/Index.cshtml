@using PagedList.Mvc;
@model PagedList.IPagedList<ImoAnalyticsSystem.Models.TipoImovel>

@{
    ViewBag.Title = "Tipos de imóvel";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewBag.title</h3>
    </div>
    <div class="header-row row">
        <div class="col-md-11">
            <p>Tipo do imóvel</p>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="primary-color-row row">
            <div class="col-md-11">
                <p>@Html.DisplayFor(modelItem => item.Tipo)</p>
            </div>
            <div class="col-md-1">
                <a class="link-more" href="@Url.Action("Details", "TipoImovel", new { id = item.ID })" title="Mais informações"><i class="fa fa-ellipsis-h"></i></a>
            </div>
        </div>
    }
</div>

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))