@model ImoAnalyticsSystem.Models.TipoImovel

@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Editar tipo de imóvel</h3>
    </div>
    <div class="panel-body">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-6">
                <div class="group">
                    @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @type = "text" } })
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label" })
                </div>
            </div>
        </div>
        <div class="row buttons-row">
            <div class="col-md-12 center">
                <input type="submit" value="Cadastrar" class="principal-button" />
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

