@model ImoAnalyticsSystem.Models.TipoImovel

@{
    ViewBag.Title = "Editar tipo de imóvel " + Model.Tipo;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Editar tipo de imóvel</h3>
    </div>
    <div class="panel-body">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-6">
                <div class="group">
                    @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @type = "text", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Tipo).ToHtmlString()), @class = "effect-1" } })
                    <span class="focus-border"></span>
                </div>
            </div>
        </div>
        <div class="row buttons-row">
            <div class="col-md-12 center">
                <input type="submit" value="Editar" class="principal-button" />
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<h2>Edit</h2>

