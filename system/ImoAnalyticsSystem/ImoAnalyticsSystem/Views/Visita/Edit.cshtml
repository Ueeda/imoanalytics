@model ImoAnalyticsSystem.Models.Visita

@{
    ViewBag.Title = "Editar visita número " + Model.ID;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.Title</h3>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-6">
                    <div class="group">
                        <p>@Html.LabelFor(model => model.Interessado)</p>
                        @Html.DropDownList("InteressadoId", null, htmlAttributes: new { @class = "" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="group">
                        <p>@Html.LabelFor(model => model.ImovelId)</p>
                        @Html.DropDownList("ImovelId", null, htmlAttributes: new { @class = "   " })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="group">
                        <p>@Html.LabelFor(model => model.CorretorId)</p>
                        @Html.DropDownList("CorretorId", null, htmlAttributes: new { @class = "" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="group">
                        <p>@Html.LabelFor(model => model.Data)</p>
                        @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @type = "text", @class = "effect-1 js-data" } })
                        <span class="focus-border"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="group">
                        <p>@Html.LabelFor(model => model.Horario)</p>
                        @Html.EditorFor(model => model.Horario, new { htmlAttributes = new { @type = "text", @class = "effect-1 js-horario" } })
                        <span class="focus-border"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p>@Html.LabelFor(model => model.Descricao)</p>
                    @Html.TextAreaFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @cols = 40, @rows = 10, @placeholder = "Descrição da visita" } })
                </div>
            </div>
            <div class="row buttons-row">
                <div class="col-md-12 center">
                    <input type="submit" value="Editar" class="principal-button" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
