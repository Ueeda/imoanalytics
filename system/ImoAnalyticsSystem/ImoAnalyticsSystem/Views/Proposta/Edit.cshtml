@model ImoAnalyticsSystem.Models.Proposta

@{
    ViewBag.Title = "Editar proposta";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.Title</h3>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-6">
                    <div class="col-sm-12" style="display: flex; height: 75px; align-items: center; justify-content: center;">
                        <label style="display: flex; width: 100%; font-size: 14px; align-items: center;">Código do Imóvel</label>
                    </div>
                    <div class="col-md-12">
                        @Html.DropDownList("ImovelId", null, htmlAttributes: new { @class = "   " })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-sm-12" style="display: flex; height: 75px; align-items: center; justify-content: center;">
                        @Html.LabelFor(model => model.InteressadoId, htmlAttributes: new { @class = "control-label col-md-2", @style = "display: flex; width: 100%; font-size: 14px; align-items: center;" })
                    </div>
                    <div class="col-md-12">
                        @Html.DropDownList("InteressadoId", null, htmlAttributes: new { @class = "" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="group">
                        <p> @Html.LabelFor(model => model.Data) </p>
                        @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @type = "text", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Data).ToHtmlString()), @class = "effect-1 js-data" } })
                        <span class="focus-border"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="group">
                        <p> @Html.LabelFor(model => model.Valor) </p>
                        @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Valor).ToHtmlString()), @class = "effect-1 js-dinheiro" } })
                        <span class="focus-border"></span>
                    </div>
                </div>
            </div>

            <div class="row buttons-row">
                <div class="col-md-12 center">
                    <input type="submit" value="Salvar" class="principal-button" />
                </div>
            </div>
        </div>
    </div>
}
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
