@{
    ViewBag.Title = "Importar imóveis de arquivo excel.";
    
}
@using (Html.BeginForm("ImportExcel", "Imovel", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewBag.Title</h3>
            </div>
            <div class="panel-body">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @if (ViewBag.ImportError != "")
                {
                    <p> Erro: @ViewBag.ImportError </p>
                }
                @if (ViewBag.ImportSuccess != "")
                {
                    <p> @ViewBag.ImportSuccess </p>
                }
                <div class="row">
                    <div class="col-sm-12">
                        <div class="group">
                            <p>Arquivo Excel</p>
                            <input type="file" id="Excel" name="upload" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel, .csv" />
                        </div>
                    </div>
                </div>
                <div class="row buttons-row">
                    <div class="col-md-12 center">
                        <input type="submit" value="Carregar arquivo" class="principal-button" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
