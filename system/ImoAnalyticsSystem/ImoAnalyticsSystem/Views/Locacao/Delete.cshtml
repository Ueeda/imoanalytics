@model ImoAnalyticsSystem.Models.Locacao

@{
    ViewBag.Title = "Tem certeza que deseja deletar a locação " + Model.CodigoLocacao + "?";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-12">
                <h3 class="panel-title">@ViewBag.Title</h3>
            </div>
        </div>
    </div>
    <div class="primary-color-row row">
        <div class="col-md-6">
            <div class="col-md-12">
                <p><b>@Html.DisplayNameFor(model => model.DataOperacao):</b> @Html.DisplayFor(model => model.DataOperacao)</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-md-12">
                <p><b>Código do @Html.DisplayNameFor(model => model.Imovel): </b> @Html.DisplayFor(model => model.Imovel.CodigoReferencia)</p>
            </div>
        </div>
    </div>
    <div class="primary-color-row row">
        <div class="col-md-6">
            <div class="col-md-12">
                <p><b>@Html.DisplayNameFor(model => model.Interessado): </b> @Html.DisplayFor(model => model.Interessado.NomeCompleto)</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-md-12">
                <p><b>@Html.DisplayNameFor(model => model.Fiador):</b> @Html.DisplayFor(model => model.Fiador.NomeCompleto)</p>
            </div>
        </div>
    </div>
    <div class="primary-color-row row">
        <div class="col-md-6">
            <div class="col-md-12">
                <p><b>@Html.DisplayNameFor(model => model.ContratoDeLocacao.DataInicio):</b> @Html.DisplayFor(model => model.ContratoDeLocacao.DataInicio)</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-md-12">
                <p><b>@Html.DisplayNameFor(model => model.ContratoDeLocacao.DataFim):</b> @Html.DisplayFor(model => model.ContratoDeLocacao.DataFim)</p>
            </div>
        </div>
    </div>
    <div class="primary-color-row row">
        <div class="col-md-6">
            <div class="col-md-6">
                <p><b>@Html.DisplayNameFor(model => model.ContratoDeLocacao.Valor):</b> @Html.DisplayFor(model => model.ContratoDeLocacao.Valor)</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-md-6">
                <p><b>@Html.DisplayNameFor(model => model.ContratoDeLocacao.ValorTaxaAdm):</b> @Html.DisplayFor(model => model.ContratoDeLocacao.ValorTaxaAdm)</p>
            </div>
        </div>
    </div>
    <div class="primary-color-row row">
        <div class="col-md-6">
            <div class="col-md-6">
                <p><b>@Html.DisplayNameFor(model => model.ContratoDeLocacao.DataPagamento):</b> @Html.DisplayFor(model => model.ContratoDeLocacao.DataPagamento)</p>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Deletar" class="principal-button" /> <br /><br />
        <a href="@Url.Action("Details", "Locacao", new { id = Model.ID })" title="Voltar para os detalhes da venda" class="voltar-icon"><i class="fa fa-arrow-left"></i></a>
    </div>
}
